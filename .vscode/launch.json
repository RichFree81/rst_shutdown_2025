{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API (Uvicorn, repo root)",
      "type": "python",
      "request": "launch",
      "program": ".venv\\Scripts\\uvicorn.exe",
      "args": ["app.main:app", "--reload", "--host", "127.0.0.1", "--port", "8000", "--app-dir", "backend"],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}\\backend\\.env",
      "console": "integratedTerminal"
    }
  ]
}
